window_padding_width 10
dynamic_background_opacity yes
# font_family JetBrainsMono


# Toggle 100% opacity
map ctrl+shift+o set_background_opacity 1

# Toggle 50% opacity
map ctrl+shift+p set_background_opacity 0.5

# Increase font size
map ctrl+equal     change_font_size all +2
map ctrl+plus      change_font_size all +2

# Decrease font size
map ctrl+minus     change_font_size all -2

# Reset to default size
map ctrl+0         change_font_size all 0


background_opacity 1

# BEGIN_KITTY_FONTS
font_family      family="JetBrainsMonoNL Nerd Font Mono"
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS
